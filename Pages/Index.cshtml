@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
        <h2 class="fw-bold mb-2 text-uppercase">Simple Banking App</h2>
        <p> with ASP.NET (Razor Pages)</p>

        <form method="get" asp-page="/Login" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">Log In</button>
        </form>

        <form method="get" asp-page="/Register" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">Register</button>
        </form>
    </div>
</div>