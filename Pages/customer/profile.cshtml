@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.customer.profileModel
@{
	ViewBag.Title = "Profile";
	Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
        <h2 class="fw-bold mb-2 text-uppercase">Profile</h2>

        <form method="post">
			<div class="mb-4">
				<label class="form-label" for="typeNameX">Name:</label>
				<input type="text" id="typeNameX" class="form-control form-control-lg" name="Name" asp-route-name="@Model.Name" value="@Model.Name" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typeSurnameX">Surname:</label>
				<input type="text" id="typeSurnameX" class="form-control form-control-lg" name="Surname" asp-route-surname="@Model.Surname" value="@Model.Surname" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typeUsernameX">Username:</label>
				<input type="text" id="typeUsernameX" class="form-control form-control-lg" name="Username" asp-route-username="@Model.Username" value="@Model.Username" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typePasswordX">Password:</label>
				<input type="text" id="typePasswordX" class="form-control form-control-lg" name="Password" asp-route-password="@Model.Password" value="@Model.Password" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typeEmailX">Email:</label>
				<input type="text" id="typeEmailX" class="form-control form-control-lg" name="Email" asp-route-email="@Model.Email" value="@Model.Email" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typeUserIdX">User ID:</label>
				<input type="text" id="typeUserIdX" class="form-control form-control-lg" value="@Model.UserId" readonly/>
			</div>

            <button asp-page-handler="Update" class="btn btn-outline-light btn-lg px-5" type="submit">Update</button>
            <button asp-page-handler="DeleteUser" class="btn btn-outline-light btn-lg px-5" type="submit">Delete User</button>
        </form>

		<form method="get" asp-page="/customer/dashboard" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">Return</button>
        </form>
    </div>
</div>