@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.customer.create_accountModel
@{
	ViewBag.Title = "Create Account";
	Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
        <h2 class="fw-bold mb-2 text-uppercase">create account</h2>

		<form  method="post" id="accountForm" class="mt-3">
			<div class ="mb-4">
				<h4>Account Type</h4>
				<select class="form-select">
					<option>-Select an Account Type-</option>
					<option>Savings Account</option>
					<option>Checking Account</option>
				</select>
			</div class="mb-4">

			<div>
				<button asp-page-handler="CreateAccount" class="btn btn-outline-light btn-lg px-5" type="submit">Create Account</button>
			</div>
		</form>
		
		@if (!string.IsNullOrEmpty(Model.Message))
		{
			<p style="color:green">Account Created Successfully</p>

		}

		<form method="get" asp-page="/customer/dashboard" class="mt-3">
			<button class="btn btn-outline-light btn-lg fs-6" type="submit">Return</button>
		</form>
    </div>
</div>