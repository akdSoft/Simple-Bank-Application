@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.admin.list_all_accountsModel
@{
	ViewBag.Title = "List All Accounts";
	Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center">
	<div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
		<h2 class="fw-bold mb-2 text-uppercase">List All Users</h2>

		@if (Model.Accounts != null && Model.Accounts.Any())
		{
			<table>
				<tr>
					<th>Id</th>
					<th>Balance</th>
					<th>User Id</th>
				</tr>

				@foreach (var a in Model.Accounts)
				{
					<tr>
						<td>@a.Id</td>
						<td>@a.Balance</td>
						<td>@a.UserId</td>
					</tr>
				}
			</table>
		}

		<form method="post" class="mt-3">
			<button class="btn btn-outline-light btn-lg fs-6" type="submit">Show Account List</button>
		</form>

		<form method="get" asp-page="/admin/dashboard" class="mt-3">
			<button class="btn btn-outline-light btn-lg fs-6" type="submit">Return</button>
		</form>
	</div>
</div>