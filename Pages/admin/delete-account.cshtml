@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.admin.delete_accountModel
@{
	ViewBag.Title = "Delete Account";
	Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center">
	<div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
		<h2 class="fw-bold mb-2 text-uppercase">Delete Account</h2>


		<form method="post" class="mt-3">
			<div class="mb-4">
				<label class="form-label" for="typeIdX">Account ID:</label>
				<input type="number" id="typeIdX" class="form-control form-control-lg" name="Id" placeholder="Enter Account ID:" />
			</div>

			<button class="btn btn-outline-light btn-lg px-5" type="submit">Delete</button>
		</form>

		@if (!string.IsNullOrEmpty(Model.Message))
		{
			if (Model.Deleted)
			{
				<p style="color: green;">@Model.Message</p>
			}
			else
			{
				<p style="color: red;">@Model.Message</p>
			}
		}

		<form method="get" asp-page="/admin/dashboard" class="mt-3">
			<button class="btn btn-outline-light btn-lg fs-6" type="submit">Return</button>
		</form>
	</div>
</div>