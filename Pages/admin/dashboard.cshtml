@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.Admin.DashboardModel
@{
	ViewBag.Title = "Admin Page";
	Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
        <h2 class="fw-bold mb-2 text-uppercase">admin page</h2>

        <form method="get" asp-page="/admin/list-all-users" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">List All User</button>
        </form>

        <form method="get" asp-page="/admin/delete-user" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">Delete User</button>
        </form>

        <form method="get" asp-page="/admin/list-all-accounts" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">List All Accounts</button>
        </form>

        <form method="get" asp-page="/admin/delete-account" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">Delete Account</button>
        </form>

        <form method="get" asp-page="/admin/list-all-transactions" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">List All Transactions</button>
        </form>

        <form method="post" class="mt-3">
            <button class="btn btn-outline-light btn-lg fs-6" type="submit">Log Out</button>
        </form>
    </div>
</div>