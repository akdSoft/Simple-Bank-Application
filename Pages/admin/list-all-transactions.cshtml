@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.admin.list_all_transactionsModel
@{
	ViewBag.Title = "List All Transactions";
	Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center">
	<div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
		<h2 class="fw-bold mb-2 text-uppercase">List All Transactions</h2>

		@if (Model.Transactions != null && Model.Transactions.Any())
		{
			<table>
				<tr>
					<th>ID</th>
					<th>Account ID</th>
					<th>User ID</th>
					<th>Amount</th>
					<th>Type</th>
					<th>Related Account ID</th>
				</tr>

				@foreach (var t in Model.Transactions)
				{
					<tr>
						<td>@t.Id</td>
						<td>@t.AccountId</td>
						<td>@t.UserId</td>
						<td>@t.Amount</td>
						<td>@t.Type</td>
						<td>@t.RelatedAccountId</td>
					</tr>
				}
			</table>
		}

		<form method="post" class="mt-3">
			<button class="btn btn-outline-light btn-lg fs-6" type="submit">Show Transaction List</button>
		</form>

		<form method="get" asp-page="/admin/dashboard" class="mt-3">
			<button class="btn btn-outline-light btn-lg fs-6" type="submit">Return</button>
		</form>
	</div>
</div>