@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Simple_Bank_Application.Pages.RegisterModel
@{
	ViewBag.Title = "Register Page";
	Layout = "_Layout";
}
<div class="d-flex justify-content-center align-items-center">
	<div class="card bg-dark text-white p-5 text-center" style="border-radius: 1rem; width: 100%; max-width: 500px;">
		<h2 class="fw-bold mb-2 text-uppercase">Register</h2>
		<p class="text-white-50 mb-4">Please enter required information!</p>

		<form method="post" asp-page="/Register">
			<div class="mb-4">
				<label class="form-label" for="typeNameX">Name</label>
				<input type="text" id="typeNameX" class="form-control form-control-lg" name="Name" placeholder="Enter name" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typeSurnameX">Surname</label>
				<input type="text" id="typeSurnameX" class="form-control form-control-lg" name="Surname" placeholder="Enter surname" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typeUsernameX">Username</label>
				<input type="text" id="typeUsernameX" class="form-control form-control-lg" name="Username" placeholder="Enter username" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typePasswordX">Password</label>
				<input type="text" id="typePasswordX" class="form-control form-control-lg" name="Password" placeholder="Enter password" />
			</div>

			<div class="mb-4">
				<label class="form-label" for="typeEmailX">Email</label>
				<input type="text" id="typeEmailX" class="form-control form-control-lg" name="Email" placeholder="Enter email" />
			</div>

			<button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>
		</form>

		<p class="mt-4 mb-0">
			Already have an account? <a asp-page="/Login" class="text-white-50 fw-bold">Log In</a>
		</p>

		<form method="get" asp-page="/Index" class="mt-3">
			<button class="btn btn-outline-light btn-lg fs-6" type="submit">Return</button>
		</form>
		@if (!string.IsNullOrEmpty(Model.Message))
		{
			<p style="color: green;">@Model.Message</p>
		}
	</div>
</div>

